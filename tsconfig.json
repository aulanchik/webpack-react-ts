{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/components": ["./src/components"],
      "@/containers": ["./src/containers"],
      "@/contexts": ["./src/contexts"],
      "@/configs": ["./src/configs"],
      "@/pages": ["./src/pages"],
      "@/hooks": ["./src/hooks"],
      "@/utils": ["./src/utils"]
    }
  },
  "include": ["./src/**/*"]
}
